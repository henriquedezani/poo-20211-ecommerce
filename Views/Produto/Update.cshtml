@model Produto


<form asp-controller="Produto" asp-action="Create" method="POST">

    <div class="form-group">
        <label asp-for="Nome"><</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="form-group">
        <label>Descrição</label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao"></span>
    </div>

    <div class="form-group">
        <label>Valor</label>
        <input asp-for="Valor" class="form-control" />
        <span asp-validation-for="Valor"></span>
    </div>

    <div class="form-group">
        <label>Categoria</label>
        <select asp-for="IdCategoria" asp-itens="@ViewBag.Categorias"
                class="form-control">
        </select>
    </div>

    <button class="btn btn-primary">Salvar</button>
</form>