@model Produto


<form asp-controller="Produto" asp-action="Create" method="POST">
    <h2>Cadastrar Produto</h2>
    <br />
    <div class="form-group">
        <label asp-for="Nome"><</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div class="form-group">
        <label>Descrição</label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao"></span>
    </div>

    <div class="form-group">
        <label>Valor</label>
        <input asp-for="Valor" class="form-control" />
        <span asp-validation-for="Valor"></span>
    </div>

    <div class="form-group">
        <label>Categoria</label>
        <select asp-for="IdCategoria" class="form-control">
            @foreach (var categoria in ViewBag.Categorias)
            {
<option value="@categoria.IdCategoria">@categoria.Nome</option>            }
        </select>
    </div>

    <button class="btn btn-primary">Salvar</button>
</form>
